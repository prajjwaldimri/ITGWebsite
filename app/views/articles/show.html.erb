<% provide(:title, truncate(@article.title)) %>

<% if @article.articleimage.file.nil? %>
<div class="article-hero">
<% else %>
<div class="article-hero" style="background-image: url(<%= @article.articleimage.url %>)">
<% end %>
  <div class="article-hero-header">
    <h1 class="wow fadeInLeft"><%= @article.title %></h1>
    <% if @article.post_type == "Blog" %>
    <h2 class="wow fadeInRight">A Blog by <%= @article.user.name %></h2>
    <% end %>
    <h3 class="wow fadeInUp">Published: <%= @article.created_at.strftime("%A, %B %d %Y") %></h3>
  </div>
</div>

<div class="article-content">
  <p>
    <%= simple_format(@article.content) %>
  </p>
</div>
