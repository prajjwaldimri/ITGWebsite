<% provide(:title, 'Edit Users') %>
<h1 style="text-align: center;">Admin User Creator</h1>

<div class="wrap" style="padding-left: 30%; padding-right: 30%;">
<%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :rollno %>
  <%= f.text_field :rollno %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create the user", class: "button" %>
<% end %>
</div>
