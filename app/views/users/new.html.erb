<% provide(:title, 'Sign-up') %>

<div class="row large-6 columns">
  <h1 class="page-headline">Admin User Creator</h1>

  <%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages' %>
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :name, "Name", class: 'text-right middle' %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :name, placeholder: "Full Name as stated in records" %>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email, "Email", class: 'text-right middle' %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :email, type: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :rollno, "Roll No/Emp. No", class: 'text-right middle' %>
    </div>
    <div class="small-9 columns">
      <%= f.text_field :rollno, type: "number", placeholder: "Roll No/Emp. No" %>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :user_type, class: 'text-right middle' %>
    </div>
    <div class="small-9 columns">
      <%= f.select(:user_type, ["Student", "Faculty"], {}, {}) %>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :branch, class: 'text-right middle' %>
    </div>
    <div class="small-9 columns">
      <%= f.select(:branch, ["Civil", "Mechanical", "Electrical", "Computer Science",
        "Electronics"], {}, {}) %>
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns">
        <%= f.label :password, class: 'text-right middle' %>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password, type: "password", placeholder: "Password",
        'aria-describedBy': 'nameHelpText' %>
        <p class="help-text", id="nameHelpText">Your password must have at least 8 characters.</p>
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns">
        <%= f.label :password_confirmation, class: 'text-right middle' %>
      </div>
      <div class="small-9 columns">
        <%= f.password_field :password_confirmation, type: "password", placeholder: "Type password again" %>
      </div>
    </div>

    <div class="row" style="text-align: right;">
      <%= f.submit "Create the user", class: "button" %>
    </div>

  <% end %>
</div>
